@model Demo.Models.TopicViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Topic - Edit</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.TopicID)

        <div class="form-group">
            <div class="row">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.SubjectID)
                    </div>
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.SubjectID, Model.Subjects, "--Select Subject--", new { @class = "au-input au-input--full" })
                    </div>
                </div>
            </div>

        <div class="form-group">
            <div class="row">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.SectionID)
                </div>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.SectionID, Model.Sections, "--Select Section--", new { @class = "au-input au-input--full" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.LessonID)
                   </div>
                     <div class="col-md-10">
                        @Html.DropDownListFor(model => model.LessonID, Model.Lessons, "--Select Section--", new { @class = "au-input au-input--full" })
                    </div>
                </div>
            </div>
                
        <div class="form-group">
            <div class="row">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.TopicName)
                   </div>
                     <div class="col-md-10">
                        @Html.TextBoxFor(model => model.TopicName, new { @class = "au-input au-input--full" })
                        @Html.ValidationMessageFor(model => model.TopicName)
                    </div>
                </div>
            </div>

        <div class="form-group">
            <div class="row">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.TopicDescription)
                </div>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.TopicDescription, new { @class = "au-input au-input--full" })
                    @Html.ValidationMessageFor(model => model.TopicDescription)
                </div>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            </div>
        </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
