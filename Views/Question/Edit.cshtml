@model Demo.Models.QuestionViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/css/theme.css" rel="stylesheet" />
<link href="~/Content/css/font-face.css" rel="stylesheet" />
@using (Html.BeginForm())
