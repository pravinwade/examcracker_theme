                </div>
                <div class="col-md-2">
                    @Html.LabelFor(model => model.IsMultiSelect, "Multiple Selection")
                </div>
                <div class="col-md-4">
                    @Html.RadioButtonFor(model => model.IsMultiSelect, "0", new { @checked = true })
                    @Html.Label("No")
                    @Html.RadioButtonFor(model => model.IsMultiSelect, "1")
